{
    "version": 2,
    "builds": [
      {
        "src": "src/main.ts",
        "use": "@vercel/node",
        "config": {
          "installCommand": "npm config set registry https://registry.npmmirror.com && npm install --legacy-peer-deps",
          "buildCommand": "npm run build"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "src/main.ts",
        "methods": [
          "GET",
          "POST",
          "PUT",
          "DELETE",
          "PATCH"
        ]
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }